---
import Layout from "@/layouts/Layout.astro";
import data from "@data";

const indicadoresServicio = data.servicios.find((servicio) => servicio.id === 3);
const indicadores = indicadoresServicio?.indicadores || [];
---

<Layout title="Indicadores" description="Indicadores de Innova SA">
  <section class="bg-white py-8 px-3">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-3xl font-light tracking-tight text-gray-900 mb-3">
        Indicadores
      </h1>
      <div class="w-12 h-px bg-gray-200 mx-auto mb-4"></div>
      <p class="text-base text-gray-600 max-w-lg mx-auto px-2">
        Visualización de los diferentes indicadores para el seguimiento estratégico de Innova SA
      </p>
    </div>
  </section>

  <div class="max-w-4xl mx-auto px-3 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {
        indicadores.map((indicador) => (
          <article class="bg-white rounded-lg shadow-sm p-5 transition-transform duration-300 hover:scale-105 hover:shadow-lg">
            {indicador.description && (
              <p class="text-gray-700">
                <span class="font-bold">{indicador.id}.</span> {indicador.description}
              </p>
            )}
          </article>
        ))
      }
    </div>

    <div class="text-center mt-8">
      <a
        href="/"
        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-gray-900 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:hover:bg-gray-700 dark:focus:ring-blue-800"
      >
        <span class="mr-1">Volver a Inicio</span>
        <svg
          class="w-3 h-3"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
      </a>
    </div>
  </div>
</Layout>
