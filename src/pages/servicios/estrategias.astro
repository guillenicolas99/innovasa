---
import Layout from "@/layouts/Layout.astro";
import data from "@data";
---

<Layout title="Estrategias" description="Estrategias de Innova SA">
  <section
    class="bg-white relative dark:bg-gray-900 bg-[url('https://flowbite.s3.amazonaws.com/docs/jumbotron/hero-pattern.svg')] dark:bg-[url('https://flowbite.s3.amazonaws.com/docs/jumbotron/hero-pattern-dark.svg')]"
  >
    <div
      class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 z-10 relative"
    >
      <h1
        class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white"
      >
        Objetivos Estratégicos de TI
      </h1>
      <p
        class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 lg:px-48 dark:text-gray-200"
      >
        Plan estratégico de tecnologías de información y comunicación para
        Innova SA
      </p>
    </div>
    <div
      class="bg-gradient-to-b from-blue-50 to-transparent dark:from-blue-900 w-full h-full absolute top-0 left-0 z-0"
    >
    </div>
  </section>

  <div class="px-4 mx-auto max-w-screen-xl py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        data.estrategias.objetivos.map((objetivo) => (
          <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md hover:shadow-xl transition-shadow duration-300 dark:bg-gray-800 dark:border-gray-700">
            <h3 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">{objetivo.title}</h3>
            <p class="mb-3 text-gray-600 dark:text-gray-300">{objetivo.content}</p>
            <div class="mt-4 space-y-3">
              <div>
                <h4 class="font-semibold text-gray-800 dark:text-gray-200">Estrategias:</h4>
                <p class="text-gray-600 dark:text-gray-300">{objetivo.estrategias}</p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-800 dark:text-gray-200">Factores Críticos:</h4>
                <p class="text-gray-600 dark:text-gray-300">{objetivo.factores_criticos}</p>
              </div>
            </div>
          </article>
          <article class="p-6 bg-white rounded-lg border border-orange-100 shadow-md hover:shadow-xl transition-shadow duration-300 dark:bg-amber-900/40 dark:border-amber-700">
            <h3 class="mb-4 text-xl font-bold text-orange-800 dark:text-amber-100">{objetivo.title}</h3>
            <p class="mb-3 text-orange-700 dark:text-amber-200">{objetivo.content}</p>
            <button 
              onclick={"document.getElementById('modal-" + objetivo.id + "').showModal()"}
              class="mt-4 px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 dark:bg-amber-600 dark:hover:bg-amber-700"
            >
              Ver más detalles
            </button>

            <dialog 
              id={"modal-" + objetivo.id}
              class="p-6 rounded-lg bg-white dark:bg-gray-800 backdrop:bg-black/50"
            >
              <div class="space-y-4">
                <div>
                  <h4 class="font-semibold text-orange-700 dark:text-amber-200">Estrategias:</h4>
                  <p class="text-orange-600 dark:text-amber-300">{objetivo.estrategias}</p>
                </div>
                <div>
                  <h4 class="font-semibold text-orange-700 dark:text-amber-200">Factores Críticos:</h4>
                  <p class="text-orange-600 dark:text-amber-300">{objetivo.factores_criticos}</p>
                </div>
                <button
                  onclick={"document.getElementById('modal-" + objetivo.id + "').close()"}
                  class="px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 dark:bg-amber-600 dark:hover:bg-amber-700"
                >
                  Cerrar
                </button>
              </div>
            </dialog>
          </article>
        ))
      }
    </div>

    <div class="text-center mt-8">
      <a
        href="/"
        class="inline-flex items-center px-5 py-3 text-sm font-medium text-center text-white bg-gray-900 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:hover:bg-gray-700 dark:focus:ring-blue-800"
      >
        Volver a Inicio
      </a>
    </div>
  </div>
</Layout>
